// colors
$lighten1: 10%;
$lighten2: 15%;
$lighten3: 60%;
$darken1: 5%;
$darken2: 10%;
$darken3: 20%;

$spin1 :  60;
$spin2 : 120;
$spin3 : 180;
$spin4 : 240;
$spin5 : 300;

$desaturate : 10%;

// theme 1
$base-color: darken(#03CEA4,5%); //#A3F3DF;
$global-border-width : 3;

$brand-teal: $base-color; //saturate($base-color, $desaturate);

$brand-blue: lighten(adjust_hue(#16926C, $spin1),20%);
$brand-purple: adjust_hue($brand-teal, $spin2);
$brand-red: #D81E5B;// adjust_hue($brand-teal, $spin3);
$brand-orange: adjust_hue($brand-teal, $spin4);
$brand-yellow: #FDCA40; //adjust_hue($brand-teal, 255);
$brand-green: adjust_hue($brand-teal, $spin5);

// theme 2
//$base-color: #00D1FF; //#A3F3DF;
//$global-border-width : 2;
//
